# SERVER CONFIG
PORT=9003
HOST=localhost
NODE_ENV=development

# DATABASE CONFIG (Đã giữ lại 'exam_db' của bạn)
DB_HOST=localhost
DB_PORT=5433
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=exam_db

# Service Discovery (Bổ sung mới)
SERVICE_DISCOVERY_ENABLED=true
EUREKA_HOST=localhost
EUREKA_PORT=9999
EUREKA_SERVICE_PATH=/eureka/apps/
EUREKA_HEARTBEAT_INTERVAL=30000
EUREKA_REGISTRY_FETCH_INTERVAL=30000

# API Gateway (Bổ sung mới)
API_GATEWAY_ENABLED=true
API_GATEWAY_BASE_URL=http://localhost:8080
API_GATEWAY_TIMEOUT=30000
API_GATEWAY_RETRIES=3
GATEWAY_HEALTH_PATH=/actuator/health
GATEWAY_CONTEXT_PATH=/api/v1

# Security (Mở rộng từ file của bạn)
JWT_SECRET=mySecretKey12345678901234567890123456789012345678901234567890
JWT_EXPIRES_IN=24h
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# BLOCKCHAIN CONFIG (Giữ nguyên các giá trị của bạn)
WEB3_PROVIDER_URL=http://127.0.0.1:7545
GRADE_LEDGER_CONTRACT_ADDRESS=0xFf72998a0e9178Aa2890B82F90bAB2De0Cd118b0
OWNER_ACCOUNT_PRIVATE_KEY=0xb9f15dee7e7c781e70455d64acf817dd7bd731995072e443b3606a1606eca97a

# Services
PROCTORING_SERVICE_URL=http://127.0.0.1:8082
# Choose ONE of the token options below:
# 1. Direct value (recommended for local dev)
PROCTORING_SERVICE_TOKEN=Bearer mySecretKey12345678901234567890123456789012345678901234567890
# 2. Path to file containing the token (relative to service root or absolute)
# PROCTORING_SERVICE_TOKEN_FILE=secrets/proctoring.token
# 3. Base64-encoded token (without "Bearer" prefix)
# PROCTORING_SERVICE_TOKEN_B64=

# JWT (shared with identity-service)
WEBSOCKET_CORS_ORIGINS=http://localhost:4173,http://localhost:5173,http://localhost:8083
JWT_SECRET=mySecretKey12345678901234567890123456789012345678901234567890

IDENTITY_SERVICE_URL=http://localhost:8081
ANALYTICS_SERVICE_URL=http://localhost:8082
NOTIFICATION_SERVICE_URL=http://localhost:8083

# File Upload (Bổ sung mới)
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=application/pdf,application/vnd.openxmlformats-officedocument.wordprocessingml.document,text/plain

# Logging (Bổ sung mới)
LOG_LEVEL=info
LOG_FORMAT=combined
